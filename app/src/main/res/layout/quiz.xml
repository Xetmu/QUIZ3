<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7067FF"
    tools:context=".BoardQuizActivity">

    <!-- Верхний блок с логотипом и кнопкой назад -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back_icon"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="@id/logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Основной блок с вопросами и ответами -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/quiz_center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:padding="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >
        <RelativeLayout
            android:id="@+id/time_bar_container"
            android:layout_width="278dp"
            android:layout_height="60dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ProgressBar
                android:id="@+id/time_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="250dp"
                android:layout_height="12dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/border"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_centerVertical="true" />

            <!-- Moving elapsed time -->
            <TextView
                android:id="@+id/time_passed_text"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp"

                android:layout_alignTop="@id/time_progress_bar"
                android:layout_marginTop="-24dp" />

            <!-- Remaining time on right -->
            <TextView
                android:id="@+id/time_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:00"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/time_progress_bar"
                android:layout_marginTop="-24dp" />
        </RelativeLayout>



        <!-- Total Questions -->
        <TextView

            android:id="@+id/total_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Questions"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/count"
            app:layout_constraintTop_toBottomOf="@id/time_bar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Question Text -->
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This will be question"

            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/total_questions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Кнопки ответов -->
        <Button
            android:id="@+id/ans_A"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/circle"
            android:background="@drawable/button_rectangular"
            android:text="Ans A"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/ans_B"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/circle"
            android:background="@drawable/button_rectangular"
            android:text="Ans B"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/ans_A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/ans_C"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/circle"
            android:background="@drawable/button_rectangular"
            android:text="Ans C"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/ans_B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/ans_D"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/circle"
            android:background="@drawable/button_rectangular"
            android:text="Ans D"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/ans_C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Пустой View для отступа -->
        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/ans_D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Кнопка Submit -->
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Далее"
            app:backgroundTint="@null"
            android:backgroundTint="@null"
            android:background="@drawable/next"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/time_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"



            android:background="@drawable/shape"
            android:gravity="center"
            android:orientation="vertical">





            <TextView
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Время вышло!"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вы не успели закончить викторину! Попробуйте ещё раз!"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginHorizontal="0dp"
                android:layout_marginBottom="16dp" />



            <Button
                android:id="@+id/time_out_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="@color/back"
                android:elevation="4dp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp"
                android:text="Начать викторину"
                android:textSize="20sp"
                android:textColor="@color/white" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TextView под центральным layout -->
    <TextView
        android:id="@+id/low_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Вернуться к предыдущим вопросам нельзя" />




</RelativeLayout>
